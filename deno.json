{
  "nodeModulesDir": "auto",
  "tasks": {
    "check": "deno fmt --check . && deno lint . && deno check",
    "dev": "vite",
    "build": "vite build",
    "start": "deno serve -A _fresh/server.js",
    "update": "deno run -A -r jsr:@fresh/update ."
  },
  "unstable": ["temporal", "kv"],
  "lint": { "rules": { "tags": ["fresh", "recommended"] } },
  "exclude": ["**/_fresh/*"],
  "imports": {
    "@deno/kv-oauth": "jsr:@deno/kv-oauth@^0.11.0",
    "@headlessui/react": "npm:@headlessui/react@^2.2.9",
    "@preact/signals": "npm:@preact/signals@^2.5.1",
    "@std/http": "jsr:@std/http@^1.0.22",
    "esbuild": "npm:esbuild@^0.27.2",
    "oauthio": "npm:oauthio@^0.3.5",
    "preact": "npm:preact@^10.28.0",
    "tools/": "./tools/",
    "daisyui": "npm:daisyui@^5.5.14",
    "fresh": "jsr:@fresh/core@^2.2.0",
    "lucide-react": "npm:lucide-react@^0.545.0",
    "@fresh/plugin-vite": "jsr:@fresh/plugin-vite@^1.0.8",
    "react-icons": "npm:react-icons@^5.5.0",
    "tailwindcss": "npm:tailwindcss@^4.1.18",
    "@tailwindcss/vite": "npm:@tailwindcss/vite@^4.1.18",
    "vite": "npm:vite@^7.3.0"
  },
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.asynciterable",
      "dom.iterable",
      "deno.ns",
      "deno.unstable"
    ],
    "jsx": "precompile",
    "jsxImportSource": "preact",
    "jsxPrecompileSkipElements": [
      "a",
      "img",
      "source",
      "body",
      "html",
      "head",
      "title",
      "meta",
      "script",
      "link",
      "style",
      "base",
      "noscript",
      "template"
    ],
    "types": ["vite/client"]
  }
}
